extends layout

block scripts
  script(type='text/template' id='card-template')
    div
      h5 <%- title %>
      p(class='card-description') <%- description %>
      p(class='card-effort') <%- effort %>
      p(class='card-operator') <%- operator %>
      button(class='card-save btn btn-default btn-sm' data-save='true')
        span(class='glyphicon glyphicon-floppy-disk' aria-hidden='true' data-save='true')
  script(src='/javascripts/underscore-min.js')
  script(src='/javascripts/backbone-min.js')
  script(src='/javascripts/models/card.js')
  script(src='/javascripts/models/cardList.js')
  script(src='/javascripts/main.js')

mixin statusLane(status)
  .col-md-4.col-sm-12.card-container(data-status=status)
    h3= status
      a(href="" title="Create new card" data-status=status)
        span.glyphicon.glyphicon-pencil.create(aria-hidden=true)
    ul.cards

block content
  h1 scrumboar - an awesome virtual scrum board
  .row.containers
    +statusLane('to do')
    +statusLane('in progress')
    +statusLane('done')
  div.delete(title="Drag a card over here to delete")
    span.glyphicon.glyphicon-trash(aria-hidden="true")
